<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Будильник 1"
        android:ems="10"
        android:id="@+id/alarmName"
        android:textAlignment="center"
        android:textColor="#9b92b3"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColorLink="#dd6495" />

    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        app:srcCompat="@drawable/save"
        android:id="@+id/floatingActionButton4"
        app:backgroundTint="#8c9f58"
        android:layout_marginEnd="34dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="Время срабатывания:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#9b92b3"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/alarmName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <LinearLayout android:layout_height="180dp" android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp">

    <biz.kasual.materialnumberpicker.MaterialNumberPicker
        app:npMinValue="0"
        app:npMaxValue="23"
        app:npDefaultValue="10"
        app:npBackgroundColor="#423752"
        app:npSeparatorColor="#9b92b3"
        app:npTextColor="#9b92b3"
        android:textStyle="normal"
        app:npTextSize="35sp"
        android:layout_weight="1"
        android:layout_width="120dp"
        android:layout_height="180dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="180dp"
        android:padding="2dp"
        android:layout_width="15dp">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_height="70dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_height="90dp"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/floatingActionButton1"
            android:layout_weight="1"
            app:backgroundTint="#9b92b3"
            android:layout_width="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:layout_height="15dp" />

        <android.support.design.widget.FloatingActionButton
            android:layout_height="90dp"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/floatingActionButton2"
            android:layout_weight="1"
            app:backgroundTint="#9b92b3"
            android:layout_width="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:layout_height="70dp" />
    </LinearLayout>

    <biz.kasual.materialnumberpicker.MaterialNumberPicker
        app:npMinValue="0"
        app:npMaxValue="59"
        app:npDefaultValue="10"
        app:npBackgroundColor="#423752"
        app:npSeparatorColor="#9b92b3"
        app:npTextColor="#9b92b3"
        android:textStyle="bold"
        app:npTextSize="35sp"
        android:layout_weight="1"
        android:layout_width="120dp"
        android:layout_height="180dp" />



</LinearLayout>

</RelativeLayout>
