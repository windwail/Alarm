<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Начало секции: 02:20"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/textView"
        android:textColor="#9b92b3"
        android:layout_marginTop="6dp" />

    <TextView
        android:text="К-во повторов:"
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#9b92b3"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_height="20dp" />

    <TextView
        android:text="Интервал:"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/textView3"
        android:textColor="#9b92b3"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_width="50dp"
        android:text="0"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#9b92b3"
        android:textColorLink="#9b92b3"
        android:textColorHint="#9b92b3"
        android:backgroundTint="#9b92b3"
        />

    <EditText
        android:layout_width="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:text="0"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignBaseline="@+id/textView3"
        android:textColor="#9b92b3"
        android:textColorLink="#9b92b3"
        android:textColorHint="#9b92b3"
        android:backgroundTint="#9b92b3"
        />


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#9b92b3"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />


</RelativeLayout>
